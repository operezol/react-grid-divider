{
  "name": "react-grid-divider",
  "version": "1.0.0",
  "description": "A flexible React grid system with visual dividers for Tailwind CSS v4",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles": "./dist/styles/grid-utilities.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && pnpm run copy-styles",
    "copy-styles": "node -e \"const fs=require('fs');const path=require('path');const dir=path.join('dist','styles');if(!fs.existsSync(dir))fs.mkdirSync(dir,{recursive:true});fs.copyFileSync(path.join('src','styles','grid-utilities.css'),path.join(dir,'grid-utilities.css'))\"",
    "prepublishOnly": "pnpm run build",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "keywords": [
    "react",
    "grid",
    "divider",
    "tailwind",
    "tailwindcss",
    "css-grid",
    "layout",
    "ui",
    "components"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/operezol/react-grid-divider.git"
  },
  "bugs": {
    "url": "https://github.com/operezol/react-grid-divider/issues"
  },
  "homepage": "https://github.com/operezol/react-grid-divider#readme",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwindcss": "^4.0.0"
  },
  "dependencies": {
    "tailwind-merge": "3.4.0"
  },
  "devDependencies": {
    "@types/react": "19.2.8",
    "@types/react-dom": "19.2.3",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@9.0.0"
}
