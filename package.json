{
  "name": "react-grid-divider",
  "version": "1.0.0",
  "description": "A flexible React grid system with visual dividers for Tailwind CSS",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles/grid-utilities.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm run build",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "keywords": [
    "react",
    "grid",
    "divider",
    "tailwind",
    "tailwindcss",
    "css-grid",
    "layout",
    "ui",
    "components"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/operezol/react-grid-divider.git"
  },
  "bugs": {
    "url": "https://github.com/operezol/react-grid-divider/issues"
  },
  "homepage": "https://github.com/operezol/react-grid-divider#readme",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwindcss": "^4.0.0"
  },
  "dependencies": {
    "tailwind-merge": "3.4.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.3",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.20.0",
    "react": "^19.0.1",
    "react-dom": "^19.0.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3"
  },
  "packageManager": "pnpm@10.14.0"
}
